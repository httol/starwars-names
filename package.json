{
  "name": "startwars-names-djq",
  "version": "0.0.0-development",
  "description": "Get random star wars names",
  "main": "dist/index.js",
  "scripts": {
    "commit": "cz",
    "check-coverage": "istanbul check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "test": "mocha src/index.test.js -w",
    "test:single": "istanbul cover -x *.test.js _mocha -- -R spec src/index.test.js",
    "prebuild": "rimraf dist",
    "build": "babel src --out-dir dist --ignore 'src/**/*.test.js' --copy-files --no-copy-ignored",
    "semantic-release": "semantic-release && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/httol/starwars-names.git"
  },
  "keywords": [
    "random",
    "star",
    "wars",
    "names"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "author": "dingjianqun <895652159@qq.com> (http://dingjianqun.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/httol/starwars-names/issues"
  },
  "homepage": "https://github.com/httol/starwars-names#readme",
  "dependencies": {
    "unique-random-array": "2.0.0"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "devDependencies": {
    "@babel/cli": "7.11.6",
    "@babel/core": "7.11.6",
    "@babel/register": "7.11.5",
    "babel-preset-env": "1.7.0",
    "chai": "4.2.0",
    "codecov.io": "0.1.6",
    "commitizen": "4.2.1",
    "cz-conventional-changelog": "3.3.0",
    "ghooks": "2.0.4",
    "istanbul": "0.4.5",
    "mocha": "8.1.3",
    "rimraf": "3.0.2",
    "semantic-release": "^17.1.2"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run test:single && npm run check-coverage"
    }
  },
  "babel": {
    "presets": [
      "env"
    ]
  }
}
